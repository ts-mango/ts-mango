{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "third-lib": [
        "node_modules/third-lib"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts"
  ]
}